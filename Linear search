# Recursive function to search x in arr[l..n] 
def recSearch( arr, l, n, x): 
	if n < l: 
		return -1
	if arr[l] == x: 
		return l 
	if arr[n] == x: 
		return n 
	return recSearch(arr, l+1, n-1, x) 
arr = [12, 34, 54, 2, 3] 
m = len(arr) 
x = 3
index = recSearch(arr, 0, m-1, x) 
if index != -1: 
	print ("Element", x,"is present at index %d" %(index) )
else: 
	print ("Element %d is not present" %(x) )
